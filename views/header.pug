doctype html
html
    head
        meta(charset='UTF-8')
        link(href='../stylesheets/index.css' rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
        title= title
body
    div(class="container-fluid" style="margin-bottom: 2rem")
        div(class="row" style="display: block !important")
            header(class="header" id="header")
                div(class="container-fluid")
                    div(class="row align-items-center")
                        div(class="col-md-4 order-lg-0")
                            div(class="container centerForm")
                                form(class="form search" id="searchForm" role="form" action="/search" method="get" name="search")
                                    div(class="input-group")
                                        input(class="form-control" type="text" id="searchParam" name="searchparam" value="" placeholder="Suche")
                                        div(class="input-group-append")
                                            button(class="btn" type="submit" id="searchSubmit" title="Suchen") Suchen
                        div(class="col-md-4 order-lg-1")
                            a(href="/")
                                img(src="../img/logo.webp")
                        div(class="col-md-4 order-lg-2")
                            div(class="container centerForm")
                                form(action="/logout" method="post")
                                    button(type="submit" class="btn btnLogOut") Abmelden
                                if breadcrump != "user/list" && user.admin
                                    form(action="/user" style="margin-top: 1rem;")
                                        button(type="submit" class="btn btnLogOut") Benutzer verwalten
